<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item"
    android:orientation="vertical" >

	<LinearLayout style="@style/list_item_bg_white_round"
		android:padding="@dimen/base_padding_mid"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		>

		<ImageView
			android:id="@+id/img_check"
			style="@style/base_icon_xlarge"
			android:src="@drawable/icon_checkbox_red_cheked"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1.0"
			>
		<LinearLayout
			style="@style/base_layout_m_w_h_cv">

			<TextView
				android:id="@+id/text_name"
				style="@style/base_text_content"
				android:layout_marginLeft="@dimen/base_margin_mid"
				android:text="呆呆贞"
				/>
			<TextView
				android:id="@+id/text_mobile"
				style="@style/base_text_content"
				android:layout_marginLeft="@dimen/base_margin_mid"
				android:text="18545216316"
				/>
		</LinearLayout>

			<TextView
				android:id="@+id/text_address"
				style="@style/base_text_content"
				android:layout_marginTop="@dimen/base_margin_small"
				android:layout_weight="1.0"
				android:layout_marginLeft="@dimen/base_margin_mid"
				android:text="福建省厦门市思明区软件园"
				/>

		</LinearLayout>

		<ImageView
			android:id="@+id/img_edit"
			style="@style/base_icon_xlarge"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:padding="5dp"
			android:background="@drawable/base_item_shadow_selector"
			android:src="@drawable/icon_edit"
			/>

	</LinearLayout>
</LinearLayout>
