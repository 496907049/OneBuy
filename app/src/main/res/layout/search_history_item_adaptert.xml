<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/requestItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        style="@style/base_layout_m_w_h"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_history"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_history_black"
            android:tint="@color/material_grey_600"
            android:layout_marginLeft="@dimen/base_margin_xsmall"
            android:layout_marginRight="@dimen/base_margin_xsmall"
            />

        <TextView
            android:id="@+id/tv_history_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last request"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:padding="13dp"
            android:src="@mipmap/ic_delete"
            android:tint="@color/material_grey_600" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        style="@style/my_line"></View>

</LinearLayout>
