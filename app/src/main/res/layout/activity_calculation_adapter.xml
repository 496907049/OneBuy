<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/base_layout_m_w_h">


        <!--   点击展开之后   所要出现的 listview     -->
        <LinearLayout
            style="@style/base_layout_m_w_h"
            android:background="@drawable/fillet_no_gray"
            android:padding="@dimen/base_padding_xsmall"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_join_time"
                style="@style/base_text_content.small.dark_grey"
                android:text="@string/join_time" />

            <TextView
                style="@style/base_text_content.small.dark_grey"
                android:text="@string/right_arrow" />

            <TextView
                android:id="@+id/tv_conversion_data"
                style="@style/base_text_content.small.yellow"
                android:text="@string/conversion_data" />

        </LinearLayout>

    <!--   点击展开之后   所要出现的 listview     -->
    <LinearLayout
        style="@style/base_layout_m_w_h"
        android:background="@drawable/fillet_no_gray"
        android:padding="@dimen/base_padding_xsmall"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_nick_name"
            style="@style/base_text_content.small.dark_grey"
            android:text="@string/nickname" />

    </LinearLayout>


</LinearLayout>