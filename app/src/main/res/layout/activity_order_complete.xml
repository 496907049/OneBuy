<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_layout_m_m_v"
    android:background="@color/home_base_gray">

    <include layout="@layout/base_top_bar"/>

    <LinearLayout
        style="@style/base_layout_m_w_v"
        android:background="@drawable/fillet_white"
       android:layout_margin="@dimen/base_margin_mid"
        android:gravity="center">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_checkbox_red_cheked"
            android:layout_marginTop="@dimen/base_margin_large"/>

        <TextView
            style="@style/base_text_content.black"
            android:text="@string/order_finish"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/base_margin_mid"
            android:layout_marginBottom="@dimen/base_margin_mid"/>

        <TextView
            style="@style/base_text_content"
            android:text="@string/order_complete_prompt"
            android:layout_margin="@dimen/base_margin_small_plus"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_goto_show"
        style="@style/base_btn_match"
        android:layout_margin="@dimen/base_margin_large"
        android:text="@string/order_goto_show" />


</LinearLayout>